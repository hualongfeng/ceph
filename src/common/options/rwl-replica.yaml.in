# -*- mode: YAML -*-
---

options:
- name: rwl_replica_addr
  type: str
  level: advanced
  desc: rwl replica will listen on the addr
  default: 192.168.0.20:9000
  services:
  - rwl-replica
  with_legacy: true
- name: rwl_replica_path
  type: str
  level: advanced
  desc: the location is that cachefile is located on
  default: /mnt/pmem
  services:
  - rwl-replica
  with_legacy: true
- name: rwl_replica_size
  type: size
  level: advanced
  desc: total cache size of one replica daemon
  default: 100_G
  services:
  - rwl-replica
  with_legacy: true
- name: rwl_replica_copies
  type: int
  level: advanced
  desc: the number of replica copy for each primary; only for test
  default: 3
  services:
  - rwl-replica
  with_legacy: true
